@model CategorieViewDTO

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />            @*A ajouter un champ caché si tous les champs sont désactivés*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Créer une catégorie</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger">Supprimer la catégorie</button>
        <a asp-controller="Category" class="btn btn-secondary" asp-action="Index">Retour a la liste</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
}
}
